
@{
    ViewBag.Title = "Customer Master";
    Layout = "~/Views/Shared/_Layout.cshtml";

    System.Data.DataSet ds = new System.Data.DataSet();
    if (ViewData["dsData"] != null)
    {
        ds = ViewData["dsData"] as System.Data.DataSet;
    }
}

<!-- Breadcrumbs-->
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("index", "dashboard" , new { area= "admin" })">Dashboard</a>
    </li>
    <li class="breadcrumb-item active">Customer Master</li>
</ol>

<!-- Page Content -->
<h1>Customer Master</h1>

<!-- Icon Cards-->
<!-- Icon Cards-->
<div class="row">
    <div class="col-xl-12 col-sm-12 mb-3">
        <div id="form1" class="card-body">
            @if (ds != null && ds.Tables.Count > 1)
            {
                System.Data.DataRow dr = ds.Tables[0].Rows[0];

                <input type="hidden" id="hidId" value="@dr["CustomerId"]" />

            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-3">
                        <span>
                            <select id="sltCompany" class="form-control required" autofocus="autofocus">
                                <option value="0">Select Company</option>
                                @foreach (System.Data.DataRow dr1 in ds.Tables[1].Rows)
                                {
                                    if (dr["CompanyCode"].ToString() == dr1[0].ToString())
                                    {
                                        <option value="@dr1[0]" selected="selected">@dr1[1]</option>
                                    }
                                    else
                                    {
                                        <option value="@dr1[0]">@dr1[1]</option>
                                    }
                                }
                            </select>
                        </span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <div class="form-label-group">
                            <input type="text" id="txtName" class="form-control required" value="@dr["CustomerName"]" />
                            <label for="txtName">Customer Name</label>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-label-group">
                            <input type="text" id="txtCode" class="form-control required" value="@dr["CustomerCode"]" readonly="readonly" />
                            <label for="txtCode">Customer Code</label>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-label-group">
                            <input type="email" id="txtEmail" class="form-control" value="@dr["EmailID"]" placeholder="Email Id" />
                            <label for="txtEmail">Email Id</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <div class="form-label-group">
                            <input type="text" id="txtAddress" class="form-control" value="@dr["Address"]" placeholder="Address" />
                            <label for="txtAddress">Address</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-label-group">
                            <input type="text" id="txtBillingAddress" class="form-control" value="@dr["BillingAddress"]" placeholder="Billing Address" />
                            <label for="txtBillingAddress">Billing Address</label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-3">
                        <div class="form-label-group">
                            <input type="text" id="txtContactPerson" class="form-control" value="@dr["ContactPerson"]" placeholder="Contact Person" />
                            <label for="txtContactPerson">Contact Person</label>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-label-group">
                            <input type="text" id="txtContactNo" class="form-control" value="@dr["ContactNo"]" placeholder="Contact No" />
                            <label for="txtContactNo">Contact No</label>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-label-group">
                            <input type="text" id="txtGST" class="form-control" value="@dr["GSTNo"]" placeholder="GST No" />
                            <label for="txtGST">GST No</label>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-label-group">
                            <input type="text" id="txtPANNo" class="form-control" placeholder="PAN No" value="@dr["PANNo"]" />
                            <label for="txtPANNo">PAN No</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <div class="form-label-group">
                            <input type="text" id="txtRemarks" class="form-control" value="@dr["Remarks"]" placeholder="Remarks" />
                            <label for="txtRemarks">Remarks</label>
                        </div>
                    </div>

                    <div class="col-xl-3 col-md-3 col-sm-12">
                        <div class="form-label-group">
                            <input type="text" id="txtWebsite" class="form-control" value="@dr["Website"]" placeholder="Website" />
                            <label for="txtWebsite">Website</label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-3">
                        <div class="checkbox">
                            <label>
                                @if (Convert.ToBoolean(dr["Active"]))
                                {
                                    <input type="checkbox" id="chkActive" value="1" checked="checked" />
                                }
                                else
                                {
                                    <input type="checkbox" id="chkActive" value="0" />
                                }
                                Active
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-2">
                        <input id="btnUpdate" type="submit" data-action="UPDATE" value="UPDATE" class="btn rounded-btn btn-block" />
                    </div>
                    <div class="col-md-2">
                        <input id="btnCancel" type="button" value="Cancel" class="btn rounded-btn btn-block" />
                    </div>
                </div>
            </div>
        }
            
        </div>
    </div>
</div>

<script type="text/javascript">
    var isshowList = 0;
</script>
<script src="@Url.Content("~/Scripts/masterjs/customer.js")"></script>