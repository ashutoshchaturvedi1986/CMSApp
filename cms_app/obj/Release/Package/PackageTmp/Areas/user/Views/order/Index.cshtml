
@{
    ViewBag.Title = "Create Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    System.Data.DataSet ds = new System.Data.DataSet();
    if (ViewData["dsData"] != null)
    {
        ds = ViewData["dsData"] as System.Data.DataSet;
    }
}

<!-- Breadcrumbs-->
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("index", "dashboard" , new { area= "admin" })">Dashboard</a>
    </li>
    <li class="breadcrumb-item active">Create Order</li>
</ol>

<!-- Icon Cards-->
<div class="row">
    <div class="col-xl-12 col-sm-12 mb-3">
        <div id="form1" class="card-body">
            @if (ViewData["dsData"] != null)
            {
                <input type="hidden" id="hidArticleId" name="hidArticleId" value="@ds.Tables[1].Rows[0]["ArticleId"].ToString()" />

                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-3">
                            <div class="form-label-group">
                                <input type="text" id="txtArticleCode" class="form-control required" value="@ds.Tables[1].Rows[0]["ArticleCode"].ToString()" disabled="disabled" readonly="readonly">
                                <label for="txtArticleCode">Article Code</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <span>
                                <select id="sltCustomer" class="form-control required">
                                    <option value="0">Select Customer</option>
                                    @if (ds.Tables.Count > 3)
                                    {
                                        foreach (System.Data.DataRow dr in ds.Tables[3].Rows)
                                        {
                                            <option value="@dr[0]" data-code="@dr[1]" data-address="@dr[3]" data-contactperson="@dr[4]" data-mobile="@dr[5]">@dr[2]</option>
                                        }
                                    }
                                </select>
                            </span>
                        </div>
                        <div class="col-md-3">
                            <div class="form-label-group">
                                <input type="text" id="txtCustomerCode" class="form-control" placeholder="Customer Alias" disabled="disabled">
                                <label for="txtCustomerCode">Customer Alias</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <span>
                                <select id="sltSalePerson" class="form-control required">
                                    <option value="0">Select Sales Person</option>
                                    @if (ds.Tables.Count > 4)
                                    {
                                        foreach (System.Data.DataRow dr in ds.Tables[4].Rows)
                                        {
                                            <option value="@dr[0]">@dr[1]</option>
                                        }
                                    }
                                </select>
                            </span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-3">
                            <div class="form-label-group">
                                <input type="text" id="txtContactPerson" class="form-control required" placeholder="Contact Person">
                                <label for="txtContactPerson">Contact Person</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-label-group">
                                <input type="text" id="txtContactPersonMobile" class="form-control required" placeholder="Mobile No">
                                <label for="txtContactPersonMobile">Mobile No</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-label-group">
                                <input type="text" id="txtCustomerAddress" class="form-control required" placeholder="Customer Address">
                                <label for="txtCustomerAddress">Customer Address</label>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-3">
                            <span>
                                <select id="sltSize" class="form-control">
                                    <option value="0">Select Size</option>
                                    @foreach (System.Data.DataRow dr1 in ds.Tables[2].Rows)
                                    {
                                        //if (dr1["MDHCode"].ToString().ToUpper() == "SIZE")
                                        //{
                                            <option value="@dr1[0]">@dr1[1]</option>
                                        //}
                                    }
                                </select>
                            </span>
                        </div>
                        <div class="col-md-3">
                            <div class="form-label-group">
                                <input type="text" id="txtQuantity" class="form-control required" placeholder="Quantity">
                                <label for="txtQuantity">Quantity</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-label-group">
                                <input type="text" id="txtRate" class="form-control required" placeholder="Rate">
                                <label for="txtRate">Rate</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-label-group">
                                <input type="text" id="txtTotalQuantity" class="form-control required" placeholder="Total Quantity">
                                <label for="txtTotalQuantity">Total Quantity</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-3">
                            <label for="txtOrderDate">Order Date</label>
                            <span><input type="date" id="txtOrderDate" class="form-control required"></span>
                        </div>
                        <div class="col-md-3">
                            <label for="txtOrderExpDate">Order Exp Date</label>
                            <span><input type="date" id="txtOrderExpDate" class="form-control required"></span>
                        </div>
                        <div class="col-md-6">
                            <label for="txtRemarks">Remarks</label>
                            <span><input type="text" id="txtRemarks" class="form-control" placeholder="Remarks"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-2">
                            <input id="btnSave" type="submit" data-action="INSERT" value="Save" class="btn rounded-btn btn-block" />
                        </div>
                        <div class="col-md-2">
                            <input id="btnCancel" type="button" value="Cancel" class="btn rounded-btn btn-block" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<script src="@Url.Content("~/Scripts/user/order.js")"></script>