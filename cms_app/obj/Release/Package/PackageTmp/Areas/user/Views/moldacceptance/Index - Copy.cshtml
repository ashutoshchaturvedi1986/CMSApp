<script language="javascript" type="text/javascript">
    var code = '@ViewBag.OrderId';
    $(document).ready(function () {
        BindMoldDetail();
    });

    function BindMoldDetail() {
        if (code.length > 0) {
            var ur = saveurl.replace('SaveResult', 'GetMasterListForEdit');
            $.ajax({
                type: "POST",
                url: ur,
                dataType: "json",
                data: { 'prmId': code },
                success: function (result) {
                    if (result != null) {
                        var obj = result[0];

                        $('#spanMold').html(obj.MoldName);
                        $('#spanTechnology').html(obj.Technology);
                        $('#spanContactPerson').html(obj.ContactPerson);
                        $('#spanContactNo').html(obj.ContactNo);
                        $('#spanFollowUpPerson').html(obj.FollowUpPersonName);
                        $('#spanMoldMaker').html(obj.MoldMaker);
                        $('#spanSize').html(obj.Size);
                        $('#spanGSTNo').html(obj.GSTNo);
                        $('#spanGradientRequirement').html(obj.GradientRequirement);
                        $('#spanShippingInstruction').html(obj.ShippingInstruction);
                        $('#spanAddress').html(obj.Address);
                        $('#spanRemarks').html(obj.Remarks);

                        $('#spanOrderDate').html(obj.OrderDate);
                        $('#spanLastSubmitionDate').html(obj.LastSubmitionDate);
                        

                        if (obj.MoldPicture.trim().length > 0) {
                            $('#imgMoldPic').attr('src', '/images/mold/' + obj.MoldPicture);
                        }
                        if (obj.TechPacDetail.trim().length > 0) {
                            $('#imgTechPic').attr('src', '/images/mold/' + obj.TechPacDetail);
                        }
                    }
                }, error: function (result) {
                    alert('There is some technical error, please contact Administrator.');
                }
            });
        }
    }
</script>
