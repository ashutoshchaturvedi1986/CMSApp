
@{
    ViewBag.Title = "Ordered Mold's List Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    System.Data.DataSet ds = new System.Data.DataSet();
    if (ViewData["dsData"] != null)
    {
        ds = ViewData["dsData"] as System.Data.DataSet;
    }
}
<!-- Breadcrumbs-->
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("index", "dashboard" , new { area= "admin" })">Dashboard</a>
    </li>
    <li class="breadcrumb-item active">Ordered Mold Detail</li>
</ol>

<!-- Icon Cards-->
<div class="row">
    <div class="col-xl-12 col-sm-12 mb-3">
        <div id="form1" class="card-body">
        @if (ds != null && ds.Tables.Count > 0)
        {
            System.Data.DataRow dr = ds.Tables[0].Rows[0];

            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-3">
                        <label for="spanMold" class="form-row-bold">Mold Name:</label>
                        <span id="spanMold">@dr["MoldName"]</span>
                    </div>
                    <div class="col-md-3">
                        <label for="imgMoldPic" class="form-row-bold" style="vertical-align: top;">Mold Pic:</label>
                        <span>
                            @if (dr["MoldPicture"].ToString().Length > 0)
                            {
                                <img id="imgMoldPic" class="uploadedimg" src="/images/mold/@dr["MoldPicture"]" />
                            }
                            else
                            {
                                <img id="imgMoldPic" class="uploadedimg" src="" />
                            }
                        </span>
                    </div>
                    <div class="col-md-3">
                        <label class="form-row-bold">Technology:</label>
                        <span id="spanTechnology">@dr["Technology"]</span>
                    </div>
                    <div class="col-md-3">
                        <label for="imgTechPic" class="form-row-bold" style="vertical-align: top;">Tech Pac:</label>
                        <span>
                            @if (dr["TechPacDetail"].ToString().Length > 0)
                            {
                                <img id="imgTechPic" class="uploadedimg" src="/images/mold/@dr["TechPacDetail"]" />
                            }
                            else
                            {
                                <img id="imgTechPic" class="uploadedimg" src="" />
                            }
                        </span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-3">
                        <label class="form-row-bold">Contact Person:</label>
                        <span id="spanContactPerson">@dr["ContactPerson"]</span>
                    </div>
                    <div class="col-md-3">
                        <label class="form-row-bold">Contact No.:</label>
                        <span id="spanContactNo">@dr["ContactNo"]</span>
                    </div>
                    <div class="col-md-3">
                        <label class="form-row-bold">Follow Up Person:</label>
                        <span id="spanFollowUpPerson">@dr["FollowUpPersonName"]</span>
                    </div>
                    <div class="col-md-3">
                        <label class="form-row-bold">Mold Maker:</label>
                        <span id="spanMoldMaker">@dr["MoldMaker"]</span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-3">
                        <label class="form-row-bold">Size:</label>
                        <span id="spanSize">@dr["Size"]</span>
                    </div>
                    <div class="col-md-3">
                        <label class="form-row-bold">GST No.:</label>
                        <span id="spanGSTNo">@dr["GSTNo"]</span>
                    </div>
                    <div class="col-md-3">
                        <label class="form-row-bold">Gradient Requirement:</label>
                        <span id="spanGradientRequirement">@dr["GradientRequirement"]</span>
                    </div>
                    <div class="col-md-3">
                        <label class="form-row-bold">Shipping Instruction:</label>
                        <span id="spanShippingInstruction">@dr["ShippingInstruction"]</span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-3">
                        <label class="form-row-bold">Address:</label>
                        <span id="spanAddress">@dr["Address"]</span>
                    </div>
                    <div class="col-md-3">
                        <label class="form-row-bold">Remarks:</label>
                        <span id="spanRemarks">@dr["Remarks"]</span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-3">
                        <label class="form-row-bold">Order Date:</label>
                        <span id="spanOrderDate">@dr["OrderDate"]</span>
                    </div>
                    <div class="col-md-3">
                        <label class="form-row-bold">Last Submition Date:</label>
                        <span id="spanLastSubmitionDate">@dr["LastSubmitionDate"]</span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="form-row">
                    @*<div class="col-md-2">
                            <input id="btnSaveOrder" type="submit" data-action="INSERT" value="Save" class="btn rounded-btn btn-block" />
                        </div>*@
                    <div class="col-md-2">
                        <input id="btnCancel" type="button" value="Cancel" class="btn rounded-btn btn-block" />
                    </div>
                </div>
            </div>
        }

            
        </div>
    </div>
</div>

<style type="text/css">
    .form-row-bold {
        font-weight: 600;
    }
</style>
