
@{
    ViewBag.Title = "City";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumbs-->
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("index", "dashboard" , new { area= "admin" })">Dashboard</a>
    </li>
    <li class="breadcrumb-item active">City</li>
</ol>

<!-- Page Content -->
<h1>City Master</h1>
<!-- Icon Cards-->
<div class="row">
    <div class="col-xl-12 col-sm-12 mb-3">
        <div id="form1" class="card-body">
            <div class="form-group">
                <div class="form-row">
                    <div class="col-xl-5 col-md-5 col-sm-12">
                        @*<label for="sltState">State</label>*@
                        <span>
                            <select id="sltState" class="form-control required" autofocus="autofocus">
                                <option value="0">Select State</option>
                                @if (ViewData["dtState"] != null)
                                {
                                    foreach (System.Data.DataRow dr in (ViewData["dtState"] as System.Data.DataTable).Rows)
                                    {
                                        <option value="@dr[0]" data-cities="@dr[2]">@dr[1]</option>
                                    }
                                }
                            </select>
                        </span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-2">
                        <div class="form-label-group">
                            <input type="text" id="txtCode" class="form-control required" placeholder="City Code" />
                            <label for="txtCode">City Code</label>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-label-group">
                            <input type="text" id="txtName" class="form-control required" placeholder="City name" />
                            <label for="txtName">City Name</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-xl-5 col-md-5 col-sm-12">
                        <div class="form-label-group">
                            <input type="text" id="txtRemarks" class="form-control" placeholder="Remarks">
                            <label for="txtRemarks">Remarks</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" id="chkActive" value="1" checked="checked">
                        Active
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-xl-2 col-md-2">
                        <input id="btnSave" type="submit" data-action="INSERT" value="Save" class="btn btn-primary rounded-btn btn-block" />
                    </div>
                    <div class="col-xl-2 col-md-2">
                        <input id="btnCancel" type="button" value="Cancel" class="btn btn-secondary rounded-btn btn-block" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


