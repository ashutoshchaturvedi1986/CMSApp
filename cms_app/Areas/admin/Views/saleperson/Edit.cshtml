
@{
    ViewBag.Title = "Sale Person Master";
    Layout = "~/Views/Shared/_Layout.cshtml";

    System.Data.DataSet ds = new System.Data.DataSet();
    if (ViewData["dsData"] != null)
    {
        ds = ViewData["dsData"] as System.Data.DataSet;
    }
}

<!-- Breadcrumbs-->
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("index", "dashboard" , new { area= "admin" })">Dashboard</a>
    </li>
    <li class="breadcrumb-item active">Sale Person Master</li>
</ol>

<!-- Page Content -->
<h1>Sale Person Master</h1>

<!-- Icon Cards-->
<!-- Icon Cards-->
<div class="row">
    <div class="col-xl-12 col-sm-12 mb-3">
        <div id="form1" class="card-body">
            @if (ds != null && ds.Tables.Count > 1)
            {
                System.Data.DataRow dr = ds.Tables[0].Rows[0];

                <input type="hidden" id="hidId" value="@dr["SalePersonId"]" />

            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-3">
                        <span>
                            <select id="sltCompany" class="form-control required" autofocus="autofocus">
                                <option value="0">Select Company</option>
                                @foreach (System.Data.DataRow dr1 in ds.Tables[1].Rows)
                                {
                                    if (dr["CompanyCode"].ToString() == dr1[0].ToString())
                                    {
                                        <option value="@dr1[0]" selected="selected">@dr1[1]</option>
                                    }
                                    else
                                    {
                                        <option value="@dr1[0]">@dr1[1]</option>
                                    }
                                }
                            </select>
                        </span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-2">
                        <div class="form-label-group">
                            <input type="text" id="txtCode" class="form-control required" value="@dr["SalePersonCode"]" readonly="readonly" />
                            <label for="txtCode">Sale Person Code</label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-label-group">
                            <input type="text" id="txtName" class="form-control required" value="@dr["SalePersonName"]" />
                            <label for="txtName">Sale Person Name</label>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-label-group">
                            <input type="text" id="txtContactNo" class="form-control" value="@dr["ContactNo"]" />
                            <label for="txtContactNo">Contact No</label>
                        </div>
                    </div>
                    <div class="col-xl-3 col-md-3 col-sm-12">
                        <div class="form-label-group">
                            <input type="date" id="inputDOB" class="form-control" value="@dr["DOB"]" />
                            <label for="inputDOB">DOB</label>
                        </div>
                    </div>

                    
                </div>
            </div>

            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <div class="form-label-group">
                            <input type="text" id="txtAddress" class="form-control" value="@dr["Address"]" />
                            <label for="txtBankName">Address</label>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-label-group">
                            <input type="email" id="txtPanNo" class="form-control" value="@dr["PanNo"]" />
                            <label for="txtEmail">Pan No</label>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-label-group">
                            <input type="text" id="txtAdhar" class="form-control" value="@dr["AdharNo"]" />
                            <label for="txtAdhar">Adhar No</label>
                        </div>
                    </div>
                    
                </div>
            </div>

            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        <div class="form-label-group">
                            <input type="text" id="txtRemarks" class="form-control" value="@dr["Remarks"]" />
                            <label for="txtRemarks">Remarks</label>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-label-group">
                            <input type="date" id="inputDOJ" class="form-control" value="@dr["DOJ"]" />
                            <label for="inputDOJ">DOJ</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-3">
                        <div class="checkbox">
                            <label>
                                @if (Convert.ToBoolean(dr["Active"]))
                                {
                                    <input type="checkbox" id="chkActive" value="1" checked="checked" />
                                }
                                else
                                {
                                    <input type="checkbox" id="chkActive" value="0" />
                                }
                                Active
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-2">
                        <input id="btnUpdate" type="submit" data-action="UPDATE" value="UPDATE" class="btn rounded-btn btn-block" />
                    </div>
                    <div class="col-md-2">
                        <input id="btnCancel" type="button" value="Cancel" class="btn rounded-btn btn-block" />
                    </div>
                </div>
            </div>
        }
            
        </div>
    </div>
</div>

<script type="text/javascript">
    var isshowList = 0;
</script>
<script src="@Url.Content("~/Scripts/masterjs/saleperson.js")"></script>

