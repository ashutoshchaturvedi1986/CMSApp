
@{
    ViewBag.Title = "Department Master";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumbs-->
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("index", "dashboard" , new { area= "admin" })">Dashboard</a>
    </li>
    <li class="breadcrumb-item active">Department Master</li>
</ol>

<!-- Page Content -->
<h1>Department Master</h1>

<!-- Icon Cards-->
<div class="row">
    <div class="col-xl-12 col-sm-12 mb-3">
        <div id="form1" class="card-body">
            <div class="form-group">
                <div class="form-row">
                    <div class="col-xl-5 col-md-5 col-sm-12">
                        <span>
                            <select id="sltCompany" class="form-control required" autofocus="autofocus">
                                <option value="0">Select Company</option>
                                @if (ViewData["dtCompany"] != null)
                                {
                                    foreach (System.Data.DataRow dr in (ViewData["dtCompany"] as System.Data.DataTable).Rows)
                                    {
                                        <option value="@dr[0]" data-child="@dr[2]">@dr[1]</option>
                                    }
                                }
                            </select>
                        </span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-xl-5 col-md-5 col-sm-12">
                        <span>
                            <select id="sltDeptHead" class="form-control required" autofocus="autofocus">
                                <option value="0">Select Head</option>
                                @if (ViewData["dtEmployee"] != null)
                                {
                                    foreach (System.Data.DataRow dr in (ViewData["dtEmployee"] as System.Data.DataTable).Rows)
                                    {
                                        <option value="@dr[0]">@dr[2]</option>
                                    }
                                }
                            </select>
                        </span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-2">
                        <div class="form-label-group">
                            <input type="text" id="txtCode" class="form-control required" placeholder="Dept Code">
                            <label for="txtCode">Dept Code</label>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-label-group">
                            <input type="text" id="txtName" class="form-control required" placeholder="Dept name">
                            <label for="txtName">Dept Name</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-xl-5 col-md-5 col-sm-12">
                        <div class="form-label-group">
                            <input type="text" id="txtRemarks" class="form-control" placeholder="Remarks">
                            <label for="txtRemarks">Remarks</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" id="chkActive" value="1" checked="checked">
                        Active
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-xl-2 col-md-2">
                        <input id="btnSave" type="submit" data-action="INSERT" value="Save" class="btn rounded-btn btn-block" />
                    </div>
                    <div class="col-xl-2 col-md-2">
                        <input id="btnCancel" type="button" value="Cancel" class="btn rounded-btn btn-block" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    var isshowList = 0;
</script>
<script src="@Url.Content("~/Scripts/masterjs/department.js")"></script>
